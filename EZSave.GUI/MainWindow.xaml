<Window x:Class="EZSave.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EZSave" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,4,12,4" />
            <Setter Property="Margin" Value="8" />
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="🇫🇷" Command="{Binding LanguageViewModel.ChangeLanguageCommand}" CommandParameter="fr-FR" />
            <Button Content="en" Command="{Binding LanguageViewModel.ChangeLanguageCommand}" CommandParameter="en-US" />

            <Button Command="{Binding RefreshCommand}" Content="{Binding LanguageViewModel.ButtonRefresh}" CommandParameter="Refresh" />
            <Button Content="{Binding LanguageViewModel.ButtonAdd}" Command="{Binding OpenJobWindowCommand}" />
            <Button Content="{Binding LanguageViewModel.ButtonConfig}" />
            <StackPanel Width="70"/>
            <Button Content="{Binding LanguageViewModel.ButtonExecuteOne}" Command="{Binding ExecuteJobSelectionCommand}" CommandParameter="{Binding List}" />
            <Button Content="{Binding LanguageViewModel.ButtonExecuteAll}" Command="{Binding ExecuteAllJobsCommand}" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <DataGrid Grid.Column="0"
                      x:Name="dataGrid"
                      ItemsSource="{Binding Jobs}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      SelectedItem="{Binding ElementSelectionne, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Job" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*" />
                    <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="*" />
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Button Content="➜" 
                        Command="{Binding AddToListCommand}" />
            </StackPanel>

            <GroupBox Grid.Column="2" Header="{Binding LanguageViewModel.JobBeingExecuted}" Padding="5">
                <ListBox 
                     ItemsSource="{Binding List}"
                     Height="300"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"/>
                  </GroupBox>
        </Grid>

    </Grid>

</Window>
