<Window
    x:Class="EZSave.GUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EZSave"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="400"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,4,12,4" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Times New Roman" />
            <Setter Property="Background" Value="LightGray" />
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Command="{Binding LanguageViewModel.ChangeLanguageCommand}"
                CommandParameter="fr-FR"
                Content="🇫🇷" />
            <Button
                Grid.Column="1"
                Command="{Binding LanguageViewModel.ChangeLanguageCommand}"
                CommandParameter="en-US"
                Content="en" />
            <Button
                Grid.Column="2"
                Command="{Binding OpenJobWindowCommand}"
                Content="{Binding LanguageViewModel.ButtonAdd}" />
            <Button
                Grid.Column="3"
                Command="{Binding ExecuteAllJobsCommand}"
                Content="{Binding LanguageViewModel.ButtonExecuteAll}" />
            <Button
                Grid.Column="4"
                Command="{Binding OpenConfigCommand}"
                Content="{Binding LanguageViewModel.ButtonConfig}" />

            <Button
                Grid.Column="5"
                Command="{Binding PlayThread}"
                
                Content="{Binding LanguageViewModel.ButtonPlay}" />
            <Button
                Grid.Column="6"
                Command="{Binding StopThread}"
                CommandParameter="{Binding List}"
                Content="{Binding LanguageViewModel.ButtonStop}" />
            <Button
                Grid.Column="7"
                Command="{Binding ResumeThread}"
                CommandParameter="{Binding List}"
                Content="{Binding LanguageViewModel.ButtonResume}" />
            <Button
                Grid.Column="8"
                Command="{Binding PauseThread}"
                CommandParameter="{Binding List}"
                Content="{Binding LanguageViewModel.ButtonPause}" />

            <Button
                Grid.Column="9"
                Command="{Binding ExecuteJobSelectionCommand}"
                CommandParameter="{Binding List}"
                Content="{Binding LanguageViewModel.ButtonExecuteOne}" />

        </Grid>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <DataGrid
                x:Name="dataGrid"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding Jobs}"
                SelectedItem="{Binding ElementSelectionne, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="Job" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Source}"
                        Header="Source" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Destination}"
                        Header="Destination" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Type}"
                        Header="Type" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Button Command="{Binding AddToListCommand}" Content="▶︎" />
                <Button Command="{Binding RemoveToListCommand}" Content="◀︎" />
            </StackPanel>

            <GroupBox
                Grid.Column="2"
                Padding="5"
                Header="{Binding LanguageViewModel.JobBeingExecuted}">
                <ListBox
                    Height="300"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ItemsSource="{Binding List}"
                    SelectedItem="{Binding ElementSelectionneList, Mode=TwoWay}" />
            </GroupBox>
        </Grid>

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="8"
            HorizontalAlignment="Center"
            FontWeight="Bold"
            Text="{Binding Message}" />
    </Grid>

</Window>
