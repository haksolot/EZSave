<Window
    x:Class="EZSave.GUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EZSave"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="400"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,4,12,4" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Times New Roman" />
            <Setter Property="Background" Value="LightGray" />
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="🇫🇷" Command="{Binding LanguageViewModel.ChangeLanguageCommand}" CommandParameter="fr-FR" Grid.Column="0"/>
            <Button Content="en" Command="{Binding LanguageViewModel.ChangeLanguageCommand}" CommandParameter="en-US" Grid.Column="1"/>
            <Button Content="{Binding LanguageViewModel.ButtonAdd}" Command="{Binding OpenJobWindowCommand}" Grid.Column="2"/>
            <Button Content="{Binding LanguageViewModel.ButtonConfig}" Command="{Binding OpenConfigCommand}" Grid.Column="4"/>
            <Button Content="{Binding LanguageViewModel.ButtonPlay}" Command="{Binding ExecuteJobSelectionCommand}" CommandParameter="{Binding List}" Grid.Column="5"/>
            <Button Content="{Binding LanguageViewModel.ButtonPause}" Command="{Binding PauseCommand}" CommandParameter="{Binding List}" Grid.Column="6"/>
            <Button Content="{Binding LanguageViewModel.ButtonStop}"  Command="{Binding StopCommand}" CommandParameter="{Binding List}" Grid.Column="7"/>

            <Button
                Grid.Column="5"
                Command="{Binding PlayThread}"

                Content="{Binding LanguageViewModel.ButtonPlay}" />
            <Button
                Grid.Column="6"
                Command="{Binding StopThread}"
                CommandParameter="{Binding List}"
                Content="{Binding LanguageViewModel.ButtonStop}" />
            <Button
                Grid.Column="7"
                Command="{Binding ResumeThread}"
                CommandParameter="{Binding List}"
                Content="{Binding LanguageViewModel.ButtonResume}" />
            <Button
                Grid.Column="8"
                Command="{Binding PauseThread}"
                CommandParameter="{Binding List}"
                Content="{Binding LanguageViewModel.ButtonPause}" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <DataGrid
                x:Name="dataGrid"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding Jobs}"
                SelectedItem="{Binding ElementSelectionne, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="Job" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Source}"
                        Header="Source" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Destination}"
                        Header="Destination" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Type}"
                        Header="Type" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Button Content="☑"
                        Command="{Binding AddAllToListCommand}"/>
                <Button Content="☒" 
                        Command="{Binding RemoveAllToListCommand}" />
                <Button Content="▶︎" 
                        Command="{Binding AddToListCommand}" />
                <Button Content="◀︎" 
                        Command="{Binding RemoveToListCommand}" />


            </StackPanel>

            <GroupBox
                Grid.Column="2"
                Padding="5"
                Header="{Binding LanguageViewModel.JobBeingExecuted}">
                <ListBox
                    Height="300"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ItemsSource="{Binding List}"
                    SelectedItem="{Binding ElementSelectionneList, Mode=TwoWay}" />
            </GroupBox>
        </Grid>
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Message}" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="4" 
                   HorizontalAlignment="Center" 
                   FontWeight="Bold" 
                   Margin="8"/>

            <Grid Grid.Row="1" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ProgressBar x:Name="pbstatus1"
             Grid.Column="0"
             Height="30"
             VerticalAlignment="Center"
             Minimum="0"
             Maximum="100"
             Value="{Binding Progression, Mode=OneWay}" />

                <Label x:Name="lb_etat_prog_server" 
                   Grid.Column="1"
                   Content="0%" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="18" 
                   FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Grid>


</Window>
