<Window x:Class="EZSave.GUI.Views.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Height="900" Width="500">
	<Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
			<TextBlock Text="Chemin du fichier de configuration :" Margin="5"/>
			<TextBox Text="{Binding ConfFileDestination}" Margin="5"/>

			<TextBlock Text="Chemin des logs :" Margin="5"/>
			<TextBox Text="{Binding LogFileDestination}" Margin="5"/>

			<TextBlock Text="Type de log (xml/json) :" Margin="5"/>
			<ComboBox ItemsSource="{Binding LogTypes}" SelectedItem="{Binding LogType}" Margin="5"/>

			<TextBlock Text="Chemin du fichier de statut :" Margin="5"/>
			<TextBox Text="{Binding StatusFileDestination}" Margin="5"/>

			<Button Content="Sauvegarder" Command="{Binding SaveConfigCommand}" Margin="10"/>
			<Button Content="Rafraîchir les Jobs" Command="{Binding RefreshJobsCommand}" Margin="10"/>

			<TextBlock Text="Espace édition de Job :" Margin="10" FontWeight="Bold"/>
			<ListView ItemsSource="{Binding Jobs}" SelectedItem="{Binding SelectedJob}" Margin="10" Height="150">
				<ListView.View>
					<GridView>
						<GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Name}" Width="150"/>
						<GridViewColumn Header="Source" DisplayMemberBinding="{Binding Source}" Width="200"/>
						<GridViewColumn Header="Destination" DisplayMemberBinding="{Binding Destination}" Width="200"/>
						<GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}" Width="100"/>
					</GridView>
				</ListView.View>
			</ListView>

			<TextBlock Text="Modifier la Source :" Margin="5"/>
			<TextBox Text="{Binding SelectedJobSource}" Margin="5"/>

			<TextBlock Text="Modifier la Destination :" Margin="5"/>
			<TextBox Text="{Binding SelectedJobDestination}" Margin="5"/>

			<TextBlock Text="Modifier le Type de sauvegarde :" Margin="5"/>
			<ComboBox ItemsSource="{Binding JobTypes}" SelectedItem="{Binding SelectedJobType}" Margin="5"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
				<Button Content="Modifier" Command="{Binding EditJobCommand}" Padding="10" Margin="5"/>
				<Button Content="Supprimer" Command="{Binding DeleteJobCommand}" Padding="10" Margin="5"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
