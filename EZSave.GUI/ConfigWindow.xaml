<Window
    x:Class="EZSave.GUI.Views.ConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EZSave.GUI"
    xmlns:properties="clr-namespace:EZSave.GUI.Properties"
    Title="Configuration"
    Width="500"
    Height="900">
    <Grid>
        <StackPanel
            Width="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock Margin="5" Text="{x:Static properties:Resources.ConfigFilePathChanging}" />
            <TextBox Margin="5" Text="{Binding ConfFileDestination}" />

            <TextBlock Margin="5" Text="{x:Static properties:Resources.LogPathChanging}" />
            <TextBox Margin="5" Text="{Binding LogFileDestination}" />

            <TextBlock Margin="5" Text="{x:Static properties:Resources.LogTypeChanging}" />
            <ComboBox
                Margin="5"
                ItemsSource="{Binding LogTypes}"
                SelectedItem="{Binding LogType}" />

            <TextBlock Margin="5" Text="{x:Static properties:Resources.StatusFilePathChanging}" />
            <TextBox Margin="5" Text="{Binding StatusFileDestination}" />

            <Button
                Margin="5"
                Command="{Binding SaveConfigCommand}"
                Content="{x:Static properties:Resources.Save}" />
            <Button
                Margin="5"
                Command="{Binding RefreshJobsCommand}"
                Content="{x:Static properties:Resources.RefreshJobs}" />

            <TextBlock
                Margin="10"
                FontWeight="Bold"
                Text="{x:Static properties:Resources.JobEdition}" />
            <ListView
                Height="150"
                Margin="10"
                ItemsSource="{Binding Jobs}"
                SelectedItem="{Binding SelectedJob}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="80"
                            DisplayMemberBinding="{Binding Name}"
                            Header="Job" />
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Source}"
                            Header="Source" />
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Destination}"
                            Header="Destination" />
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Type}"
                            Header="Type" />
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBlock Margin="5" Text="{x:Static properties:Resources.EnterSource}" />
            <TextBox Margin="5" Text="{Binding SelectedJobSource}" />

            <TextBlock Margin="5" Text="{x:Static properties:Resources.EnterDestination}" />
            <TextBox Margin="5" Text="{Binding SelectedJobDestination}" />

            <TextBlock Margin="5" Text="{x:Static properties:Resources.EnterType}" />
            <ComboBox
                Margin="5"
                ItemsSource="{Binding JobTypes}"
                SelectedItem="{Binding SelectedJobType}" />

            <TextBlock Margin="5" Text="{x:Static properties:Resources.FileSizeThreshold}" />
            <TextBox Width="200" Text="{Binding FileSizeThreshold, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Margin="5" Text="CryptoKey" />
            <TextBox Margin="5" Text="{Binding CryptoKey}" />

            <StackPanel
                Margin="5"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="5"
                    Padding="10"
                    Command="{Binding EditJobCommand}"
                    Content="{x:Static properties:Resources.ConfigOption2}" />
                <Button
                    Margin="5"
                    Padding="10"
                    Command="{Binding DeleteJobCommand}"
                    Content="{x:Static properties:Resources.ConfigOption3}" />
                <TextBlock
                    Margin="10"
                    FontWeight="Bold"
                    Foreground="Green"
                    Text="{Binding StatusMessage}"
                    TextAlignment="Center" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
